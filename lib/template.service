[Unit]
Description=Mount External Drive on %i

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=[AUTOMOUNTSCRIPT]/SDMED/automount.sh add %i
ExecStop=[AUTOMOUNTSCRIPT]/SDMED/automount.sh remove %i
